<section class="md:py-10 lg:py-[70px]">
  <div
    class="relative shadow-lg mx-auto max-w-[525px] overflow-hidden rounded-lg bg-white py-16 px-10 sm:px-12 md:px-[60px]"
  >
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {novalidate: true, class: "group"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="mb-6">
        <%= f.label :email, class: "mb-2 block text-sm text-gray-600" %>
        <%= f.email_field :email, 
        autofocus: true, 
        autocomplete: "email", 
        class: "border-[#E9EDF4] w-full rounded-md border bg-[#FCFDFE] py-3 px-5 text-base text-body-color placeholder-[#ACB6BE] outline-none focus:border-primary focus-visible:shadow-none invalid:[&:not(:placeholder-shown):not(:focus)]:border-red-400 [&:not(:placeholder-shown):not(:focus):invalid~span]:block", 
        placeholder: "Email address", 
        required: true, 
        pattern: "[a-z0-9._+-]+@[a-z0-9.-]+\.[a-z]{2,}$" %>
        <span class="hidden mt-2 text-sm text-red-400">Please enter a valid email address. </span>
      </div>
      
      <div class="mb-6">
        <%= f.label :password, class: "text-sm text-gray-600 inline" %>
        <% if @minimum_password_length %>
        <em class="text-sm text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, 
        autocomplete: "new-password", 
        class: "border-[#E9EDF4] w-full rounded-md border bg-[#FCFDFE] py-3 px-5 text-base text-body-color placeholder-[#ACB6BE] outline-none focus:border-primary focus-visible:shadow-none mt-2 invalid:[&:not(:placeholder-shown):not(:focus)]:border-red-400 [&:not(:placeholder-shown):not(:focus):invalid~span]:block", 
        placeholder: "Password", 
        pattern: ".{6,}", 
        required: true %>
        <span class="hidden mt-2 text-sm text-red-400">Password must be atleast six characters. </span>
      </div>
      
      <div class="mb-6">
        <%= f.label :password_confirmation, class: "mb-2 block text-sm text-gray-600" %>
        <%= f.password_field :password_confirmation, 
        autocomplete: "new-password", 
        placeholder: "Re-type password",
        class: "border-[#E9EDF4] w-full rounded-md border bg-[#FCFDFE] py-3 px-5 text-base text-body-color placeholder-[#ACB6BE] outline-none focus:border-primary focus-visible:shadow-none mt-2 invalid:[&:not(:placeholder-shown):not(:focus)]:border-red-400 [&:not(:placeholder-shown):not(:focus):invalid~span]:block", 
        pattern: ".{6,}", 
        required: true %>
        <span class="hidden mt-2 text-sm text-red-400">Password must be the same. </span>
      </div>
      
      <div class="mb-10">
        <%= f.submit "Sign up", class: "w-full px-5 py-3 text-base text-white transition border rounded-md cursor-pointer border-blue-600 bg-blue-600 hover:bg-opacity-90 group-invalid:pointer-events-none group-invalid:opacity-70" %>
      </div>
    <% end %>
    <p class="text-base text-[#adadad] text-center">
      Have an account?
      <%= link_to "Log in", new_session_path(resource_name), class: "text-blue-600 hover:underline" %>
    </p>
  </div>
</section>

